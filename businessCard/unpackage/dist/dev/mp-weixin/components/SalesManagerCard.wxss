
.sale-card{
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 700rpx;
	height: 370rpx;
	margin: auto;
	border-radius: 20rpx;
	background-color: #FFF;
}
.sale-card .left{
	width: 250rpx;
	height: 100%;
	border-radius: 20rpx 0 0 20rpx ;
	overflow: hidden;
}
.sale-card .absolute-right-icon{
	position: absolute;
	left: 300rpx;
	top: 0;
	font-size: 5em;
}
.sale-card .right{
	-webkit-flex-basis: 1;
	        flex-basis: 1;
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	        flex-grow: 1;
	padding: 20rpx;
}

